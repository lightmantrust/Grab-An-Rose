        loop={true}
      />
      <Rive 
        src="fire_trail.riv" 
        stateMachine="speed" 
      />
      <GLView>
        <Particles 
          type="rose" 
          follow={driverPos} 
          count={1000}
        />
      </GLView>
      <Reanimated.View 
        style={[styles.hud, { transform: [{ scale: spring }] }]}
      />
    </>
  );
}
