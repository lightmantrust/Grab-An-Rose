// apps/client/src/screens/RideCompletedScreen.tsx
import React, { useEffect, useState } from 'react';
import { View, Text, StyleSheet, Animated } from 'react-native';
import { useRoute } from '@react-navigation/native';
import { SpinePlayer } from 'spine-react-native';
import { useRideContext } from '../context/RideContext';

export default function RideCompletedScreen() {
  const route = useRoute();
  const { rideId } = route.params;
  const { getRideDetails } = useRideContext();
  const [ride, setRide] = useState(null);
  const [bonusTokens, setBonusTokens] = useState(0);
  const scaleAnim = new Animated.Value(0);

  useEffect(() => {
    const fetchRideDetails = async () => {
      const rideDetails = await getRideDetails(rideId);
      setRide(rideDetails);
      
      // Check for bonus tokens
      if (rideDetails.reroutingEvents && rideDetails.reroutingEvents.length > 0) {
        setBonusTokens(5); // 5 ROSE tokens
      }
      
      // Trigger animation
      Animated.timing(scaleAnim, {
        toValue: 1,
        duration: 1000,
        useNativeDriver: true
      }).start();
    };

    fetchRideDetails();
  }, [rideId]);

  return (
    <View style={styles.container}>
      <SpinePlayer 
        source="phoenix_complete.json" 
        animation="celebration" 
        loop={false}
        style={styles.animation}
      />
      
      <Animated.View style={[styles.content, { transform: [{ scale: scaleAnim }] }]}>
        <Text style={styles.title}>You've Arrived!</Text>
        <Text style={styles.subtitle}>Payment has been processed automatically</Text>
        
        <View style={styles.fareContainer}>
          <Text style={styles.fareLabel}>Total Fare</Text>
          <Text style={styles.fareAmount}>â‚±{ride?.finalFare?.php.toFixed(2)}</Text>
          {ride?.paymentMethod === 'XRP' && (
            <Text style={styles.xrpAmount}>
              {ride?.finalFare?.xrp.toFixed(4)} XRP
            </Text>
          )}
        </View>
        
        {bonusTokens > 0 && (
          <View style={styles.bonusContainer}>
            <Text style={styles.bonusText}>
              ðŸŽ‰ You received {bonusTokens} ROSE tokens for route adjustment!
            </Text>
          </View>
        )}
        
        <View style={styles.ratingContainer}>
          <Text style={styles.ratingLabel}>Rate your ride</Text>
          {/* Star rating component */}
        </View>
      </Animated.View>
    </View>
  );
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#1a1a2e',
    alignItems: 'center',
    justifyContent: 'center'
  },
  animation: {
    width: 200,
    height: 200,
    marginBottom: 20
  },
  content: {
    alignItems: 'center',
    paddingHorizontal: 20
  },
  title: {
    fontSize: 28,
    fontWeight: 'bold',
    color: '#fff',
    marginBottom: 10
  },
  subtitle: {
    fontSize: 16,
    color: '#aaa',
    marginBottom: 30,
    textAlign: 'center'
  },
  fareContainer: {
    backgroundColor: '#16213e',
    borderRadius: 12,
    padding: 20,
    width: '100%',
    alignItems: 'center',
    marginBottom: 20
  },
  fareLabel: {
    fontSize: 14,
    color: '#aaa',
    marginBottom: 5
  },
  fareAmount: {
    fontSize: 32,
    fontWeight: 'bold',
    color: '#fff'
  },
  xrpAmount: {
    fontSize: 16,
    color: '#e94560',
    marginTop: 5
  },
  bonusContainer: {
    backgroundColor: 'rgba(233, 69, 96, 0.2)',
    borderRadius: 8,
    padding: 15,
    width: '100%',
    alignItems: 'center',
    marginBottom: 20
  },
  bonusText: {
    color: '#fff',
    fontSize: 14,
    textAlign: 'center'
  },
  ratingContainer: {
    width: '100%',
    alignItems: 'center'
  },
  ratingLabel: {
    fontSize: 16,
    color: '#fff',
    marginBottom: 10
  }
});
